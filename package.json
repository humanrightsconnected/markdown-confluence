{
   "name": "obsidian-confluence-root",
   "private": true,
   "version": "5.5.2",
   "type": "module",
   "scripts": {
      "prepare": "husky install",
      "predev-obsidian": "npm run build",
      "dev-obsidian": "npm run dev --workspace=@markdown-confluence/lib & npm run dev --workspace=@markdown-confluence/mermaid-electron-renderer & npm run dev --workspace=obsidian-confluence",
      "build": "npm run build --workspaces --if-present",
      "fmt": "npm run fmt --workspaces --if-present",
      "test": "npm test --workspaces --if-present"
   },
   "devDependencies": {
      "@types/node": "^24.9.1",
      "builtin-modules": "5.0.0",
      "esbuild": "0.25.11",
      "esbuild-node-externals": "^1.18.0",
      "esbuild-plugin-copy": "^2.1.1",
      "eslint": "^9.38.0",
      "eslint-config-prettier": "^10.1.8",
      "husky": "^9.1.7",
      "lint-staged": "16.2.5",
      "prettier": "3.6.2",
      "ts-jest": "^29.4.5",
      "ts-node": "^10.9.2",
      "tslib": "2.8.1",
      "typescript": "^5.9.3",
      "typescript-eslint": "^8.46.2"
   },
   "workspaces": [
      "packages/lib",
      "packages/mermaid-electron-renderer",
      "packages/mermaid-puppeteer-renderer",
      "packages/cli",
      "packages/obsidian"
   ],
   "lint-staged": {
      "packages/**/*.ts": "prettier --write"
   },
   "overrides": {
      "test-exclude": "^7.0.1",
      "@types/d3-dispatch": "2.0.4",
      "@types/yargs": "^17.0.33",
      "prosemirror-model": "1.25.4"
   }
}
